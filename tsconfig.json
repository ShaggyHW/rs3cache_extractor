{
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "ESNext",
		"lib": [
			"ESNext",
			"DOM"
		],
		"target": "ES2020",
		"sourceMap": false,
		"alwaysStrict": true,
		"jsx": "react",
		"allowJs": false,
		"strictNullChecks": true,
		"baseUrl": "./src",
		"outDir": "./dist",
		"rootDir": "./src",
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"noImplicitThis": true,
		"strictFunctionTypes": true,
		"strictPropertyInitialization":true
	},
	"exclude": [
		"node_modules",
		"./generated"
	],
	"compileOnSave": false
}